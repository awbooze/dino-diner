<Page x:Class="PointOfSale.MenuCategorySelection"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PointOfSale"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Menu Category Selection">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button Name="ComboButton" Grid.Column="0" Grid.Row="0" Click="Button_Click">Combos</Button>
        <Button Name="EntreeButton" Grid.Column="1" Grid.Row="0" Click="Button_Click">Entrees</Button>
        <Button Name="SideButton" Grid.Column="0" Grid.Row="1" Click="Button_Click">Sides</Button>
        <Button Name="DrinkButton" Grid.Column="1" Grid.Row="1" Click="Button_Click">Drinks</Button>
    </Grid>
</Page>
